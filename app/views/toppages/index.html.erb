<% if logged_in? %>
  <div class="row">
    <div class = "col-sm-6">
      <div>
        <% if current_user.image? %>
          <%= image_tag current_user.image.url %>
　　　　<% end %>
        <%= current_user.name %>
      </div>
      <div class="pt-3 mt-4 pl-4 ml-4 mt-3 pb-3 mb-3">
        <%= link_to "select", image_user_path(current_user.id), method: :post, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class = "offset-sm-1 col-sm-5">
      <div class="pt-5 pl-5 mt-5 ml-5">
        <%= link_to "Post Book", new_book_path, class: 'btn btn-primary' %>
        <%= link_to "My Booklist", books_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>  
  <%= render "books/books" %>
<% else %>
  <div class="center jumbotron">
    <div style="position: relative; display:inline-block;">
    <img src="/assets/toppage.png" class="img-fluid" alt="toppage"> 
    <div style="position: absolute; top: 0; left: 0; max-width: 100%; max-height: 100%; padding: 30px; text-align: left;">
    <div class="text-center"><p><h1>Welcome to the Booklife</h1></p></div>
    </div></div>
  </div>  
<% end %>