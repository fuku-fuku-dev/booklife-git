<div>
  <img src="/assets/icon.png" class="img-fluid" alt="icon"><%= @user.name %>
</div>
<div class="row">
  <nav class="nav nav-pills flex-column flex-sm-row col-sm-12">
    <div class="col-sm-3"><a class="flex-sm-fill text-sm-center nav-link" href="<%= many_favorites_book_path(@user) %>">Many Favorite</a></div>
    <div class="col-sm-3"><a class="flex-sm-fill text-sm-center nav-link" href="<%= new_books_book_path(@user) %>">New</a></div>
    <div class="col-sm-3"><a class="flex-sm-fill text-sm-center nav-link" href="<%= old_books_book_path(@user) %>">Old</a></div>
    <div class="col-sm-3"><a class="flex-sm-fill text-sm-center nav-link" href="<%= likes_user_path(@user) %>">My Favorite</a></div>
  </nav>
</div>
<div class="row">
  <% @books.each do |book| %>
  <div class="col-sm-5">
    投稿時間<%= book.created_at %>
    <img src="/assets/icon.png" class="img-fluid" alt="icon"><%= link_to user_path(book.user) do %><%= book.user.name %><% end %>
  </div>
  <div class="col-sm-7">
    <img src="/assets/book.png" class="img-fluid" alt="本の写真">
    <%= book.title %>
    ⭐️<%= book.users.count %>
    <%= link_to "詳細", book_path(book), class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>
