<% if @users.any? %>
  <ul class = "list-unstyled">
    <% @users.each do |user| %>
      <li class = "media pt-3 mt-3">
        <% if user.image? %>
          <%= image_tag user.image.url %>
　　　　<% end %>
        <div class = "media-body pt-3 mt-3">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to '投稿一覧', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate @users %>
<% end %>
