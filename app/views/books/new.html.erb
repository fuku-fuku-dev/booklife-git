<div class="text-center">
  <h1>Post Book</h1>
  <img src="/assets/book.png" class="img-fluid" alt="本の写真">
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @book, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :title, '本のタイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :image, '本の写真' %>
        <%= f.file_field :image, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :explain, '本の説明' %>
        <%= f.text_field :explain, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :change, '読んで変わったこと' %>
        <%= f.text_field :change, class: 'form-control' %>
      </div>

      <%= f.submit '投稿する', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>